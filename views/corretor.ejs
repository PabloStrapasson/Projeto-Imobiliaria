<div class="container">

<a class="btn btn-outline-primary float-right" href="logout">sair</a>

    <div class="row">
          <div class="col-sm-6 col-sm-offset-3">
                  <p class="lead text-muted">adicionar imovel</p>
                <form action="/corretor-r" method="POST" enctype="multipart/form-data">
                      <div class="form-group">
                            <input type="text" name="tipo" class="form-control" placeholder="tipo">
                      </div>
                      <div class="form-group">
                            <input type="text" name="ndormitorios" class="form-control" placeholder="numero de dormitorios">
                      </div>
                      <div class="form-group">
                            <input type="text" name="nbanheiros" class="form-control" placeholder="numero de banheiros">
                      </div>
                      <div class="form-group">
                            <input type="text" name="ngaragem" class="form-control" placeholder="numero de vagas na garagem">
                      </div>
                      <div class="form-group">
                            <input type="text" name="endereco" class="form-control" placeholder="endereco">
                      </div>
                      <div class="form-group">
                            <input type="text" name="descricao" class="form-control" placeholder="descricao">
                      </div>
                      <div class="form-group">
                            <input type="text" name="ninscricao" class="form-control" required placeholder="numero da inscricao">
                      </div>
                      <div class="form-group">
                            <input type="text" name="valor" class="form-control" required placeholder="valor">
                      </div>
                      <div class="form-group">
                            <input type="text" name="situacao" class="form-control" placeholder="situacao" value="disponivel">
                      </div>
                      <div class="form-group" id="arquivo-imagem">
                            <input type="text" name="imagem0" id="imagem0" class="form-control" placeholder="imagem">
                            <input class="file-input" type="file" id="avatar" name="avatar" accept="image/*">
                      </div>
                      <div class="form-group text-right">
                            <button type="submit" id="adicionar" class="btn btn-primary btn-lg">adicionar</button>
                      </div>
                </form>
          </div>
    </div>


<div class="row">
  <% for (imovel of imoveis){%>
          <div class="col-md-4">
    <div class="card mb-4 shadow-sm">
      <div class="card-header">
        <img class="img-responsive bd-placeholder-img card-img-top" style="height: 250px" src="/uploads/<%= imovel.imagem0 %>">
      </div>
      <div class="card-body">
        <h1 class="card-title pricing-card-title">$<%= imovel.valor %> <small class="text-muted">/ mes</small></h1>
        <ul class="list-unstyled mt-3 mb-4">
          <li>tipo: <%= imovel.tipo %></li>
          <li>numero de dormitorios: <%= imovel.ndormitorios %></li>
          <li>numero de banheiros: <%= imovel.nbanheiros %></li>
          <li>numero de vagas na garagem: <%= imovel.ngaragem %></li>
          <li>endereco: <%= imovel.endereco %></li>
          <li>descricao: <%= imovel.descricao %></li
		  <li>numero da inscricao: <%= imovel.ninscricao %></li>
		  <li>valor: <%= imovel.valor %></li>
		  <li>situacao: <%= imovel.situacao %></li>
        </ul>
		<div class="btn-group">
		  <button type="button" class="btn btn-sm btn-outline-secondary">alterar</button>
		  <form action="/corretor-r-ri" method="POST">
			<input type="hidden" name="ninscricao" value="<%= imovel.ninscricao %>">
			<button type="submit" class="btn btn-sm btn-outline-secondary">remover</button>
		  </form>
		  
		</div>
      </div>
    </div>
    </div>
    <% } %>
   
    </div>

</div>
    
</div>

  <script>
    const fileInput = document.querySelector('#arquivo-imagem input[type=file]');
    fileInput.onchange = () => {
      if (fileInput.files.length > 0) {
        document.getElementById("imagem0").setAttribute('value',fileInput.files[0].name);
        const submitButton = document.querySelector('#adicionar');
        submitButton.removeAttribute('disabled')
      }
    }
  </script>
